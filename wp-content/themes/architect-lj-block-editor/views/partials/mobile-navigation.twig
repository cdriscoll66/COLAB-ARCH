    <ul>
        {% for item in main_menu.items %}
            <li class="{{ item.classes|join(' ') }}">
                {% if 'no-nav-link' in item.classes %}
                    <a href="#">{{ item.title }}</a>
                {% else %}
                    <a href="{{ item.link }}">{{ item.title }}</a>
                {% endif %}
               {% if item.children %}
                <span class="material-icons menu-expand js-expand">expand_more</span>
                    <div class="o-menu__subnav">
                        <ul class="o-menu__subnav-inner">
                            {% for child in item.children %}
                                <li class="{{ child.classes|join(' ') }} mdc-list-item">
                                    <a href="{{ child.link }}">{{ child.title }}</a>
                                    {% if child.children %}
                                        <ul>
                                            {% for child in child.children %}
                                                <li class="{{ child.classes|join(' ') }}">
                                                    <a href="{{ child.link }}">{{ child.title }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
